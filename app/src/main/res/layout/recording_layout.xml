<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Recording"
    android:background="#000000"
    android:focusableInTouchMode="false">

    <!-- no onCLick event handler for this button-->
    <!-- BUT, this should look like it has emphasis-->
    <ImageButton android:id="@+id/recordTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mic"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/folderTab"
        android:layout_toStartOf="@+id/folderTab"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:background="#00000000" />

    <ImageButton android:id="@+id/folderTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/folder_gry"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="filesTabPress"
        android:background="#00000000" />

    <!-- add onCLick event handler for this button later...-->
    <ImageButton android:id="@+id/editTab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tools_gry"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/folderTab"
        android:layout_toEndOf="@+id/folderTab"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:onClick="editTabPress"
        android:background="#00000000" />

    <!-- add onCLick event handler for this button later...-->
    <!-- ex: modal says "set recording time:" w/ spinners and OK/CANCEL
    TextView android:id="@+id/recTime"
        android:text="@string/rec_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40sp"
        android:onClick="seekFwd"
        android:layout_marginTop="40dp"
        android:layout_above="@+id/recButt"
        android:layout_centerHorizontal="true" />
    -->

    <!-- add onCLick event handler for this button later...-->
    <!-- This will start a thread...?-->
    <ImageButton android:id="@+id/recButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rec_03copy"
        android:onClick="onRecord"
        android:background="#00000000"
        android:layout_above="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dp" />

    <!-- FOR TESTING
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/theInput"
        android:layout_above="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"
        android:text="thingssss"/>
    -->

    <!-- The following should be inert for recording_layout.XML... -->
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="45dp"
        />

    <ImageButton android:id="@+id/playButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play_white"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/bckButt"
        android:layout_toStartOf="@+id/bckButt"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:onClick="onPlay"
        android:background="#00000000" />

    <ImageButton android:id="@+id/bckButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bck_white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/progressBar"
        android:background="#00000000"
        android:onClick="seekBck"/>

    <ImageButton android:id="@+id/fwdButt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fwd_white"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/bckButt"
        android:layout_toEndOf="@+id/bckButt"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:onClick="seekFwd"
        android:background="#00000000" />

<!-- THIS IS FOR 264, BUT NOT 371
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="liveVoice"
        android:id="@+id/testButton"
        android:layout_below="@+id/recButt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:onClick="livePlayActions" />
-->
    <LinearLayout android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/folderTab"
        android:layout_centerHorizontal="true"
        android:paddingTop="12dp"

        >

        <ImageButton android:id="@+id/hourglass"
            android:src="@drawable/hourglass"
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:onClick="onClick_timer"/>

        <ImageButton android:id="@+id/saveRec"
            android:src="@drawable/save_white"
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:onClick="onClick_saveRec"/>

        <ImageButton android:id="@+id/delRec"
            android:src="@drawable/trash_white"
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:onClick="onClick_delRec"/>

        <ImageButton android:id="@+id/pocketMode"
            android:src="@drawable/pocket_large_phone"
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:onClick="onClick_pocketMode"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/sliderBar"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/toolBar"
        android:layout_centerHorizontal="true"
        android:paddingTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Preset Recording time:"
            android:id="@+id/setRecPrompt" />

        <NumberPicker android:id="@+id/minuteSlider"
            android:layout_width="wrap_content"
            android:layout_height="60dp" />

        <NumberPicker android:id="@+id/secondSlider"
            android:layout_width="wrap_content"
            android:layout_height="60dp" />

        <Button android:id="@+id/setRecTime"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="set"
            android:onClick="setMaxRec"/>

    </LinearLayout>

    <ProgressBar android:id="@+id/fakeBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"

        android:layout_below="@+id/sliderBar"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
